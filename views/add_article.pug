extends layout

block content
    h1 #{title}
    form(method='POST', action='/articles/add')
        #form-group
            label Body:
            textarea.form-control(name='body', type='text')
        #form-group
            label Link:
            input.form-control(name='link', type='text')
        br
        input.btn.btn-primary(type='submit', value='Submit')
