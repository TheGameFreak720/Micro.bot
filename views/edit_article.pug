extends layout

block content
    h1 #{title}
    form(method='POST', action='/articles/edit/' + article._id)
        #form-group
            label Body:
            textarea.form-control(name='body')= article.body
        #form-group
            label Link:
            input.form-control(name='link', type='text', value=article.link)
        br
        input.btn.btn-primary(type='submit', value='Submit')
block script
    script(src='/js/inactivity.js')